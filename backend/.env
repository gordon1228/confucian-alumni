# Environment Configuration for SQL Server
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Security - IMPORTANT: Generate a secure random secret!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#JWT_SECRET=your_super_secure_random_jwt_secret_here_minimum_256_bits

# SQL Server Database Configuration
DB_SERVER=localhost
DB_USER=sa
DB_PASSWORD=kwang12345
DB_NAME=confucian_alumni
DB_PORT=1433
NODE_ENV=development

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Base URL (for frontend)
REACT_APP_API_URL=http://localhost:5000/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=another_super_secure_random_session_secret

# SSL Configuration (Production)
# SSL_KEY=/path/to/private.key
# SSL_CERT=/path/to/certificate.crt

# SQL Server Connection Options
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=true
DB_CONNECTION_TIMEOUT=60000
DB_REQUEST_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log